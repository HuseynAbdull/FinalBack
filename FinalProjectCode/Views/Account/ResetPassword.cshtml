@model ResetPasswordVM 

<div class="container">


    <h1 style="margin:1.5rem 0">ENTER A NEW PASSWORD</h1>
    <form method="post">

        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Token" />
        <!-- Password input -->
        <div class="form-outline mb-3">
            <p class="inpt-p">Password</p>
            <input asp-for="Password" class="login-input"
                   placeholder="Enter password" />
            <span asp-validation-for="Password" class="text text-danger"></span>
        </div>

        <!--Confirm Password input -->
        <div class="form-outline mb-3">
            <p class="inpt-p">Confirm Password</p>
            <input asp-for="ConfirmPassword" class="login-input"
                   placeholder="Confirm password" />
            <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>
        </div>

        <button type="submit" class="login-button"
                style="padding-left: 2.5rem; padding-right: 2.5rem;">
            CHANGE
        </button>
    </form>
</div>