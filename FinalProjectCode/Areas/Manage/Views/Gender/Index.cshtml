@model IEnumerable<Gender>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="row">
    <div class="col-lg-4">
        <h1 class="h3 mb-4 text-gray-800">Genders Page</h1>
    </div>
    <div class="col-lg-2">
        <a asp-action="create" asp-controller="gender" asp-area="manage" class="btn btn-primary">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Gender gender in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@gender.Name</td>
                        <td>
                            <a asp-area="manage" asp-controller="gender" asp-action="detail" asp-route-genderId="@gender.Id" class="btn btn-primary">Detail</a>
                            <a asp-area="manage" asp-controller="gender" asp-action="Update" asp-route-genderId="@gender.Id" class="btn btn-warning">Update</a>
                            <a asp-area="manage" asp-controller="gender" asp-action="DeleteDetail" asp-route-genderId="@gender.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

