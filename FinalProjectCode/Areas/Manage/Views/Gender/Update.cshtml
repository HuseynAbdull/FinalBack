@using FinalProjectCode.Models;
@model Gender


<div class="row">
    <div class="col-lg-4">
        <h1 class="h3 mb-4 text-gray-800">Gender Update Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="@Model.Id">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">New Name</label>
                <input asp-for="Name" class="form-control">
            </div>
            <div id="fileInput" class="mb-3">
                <label asp-for="File" class="form-label">Choose Your New Gender Image </label>
                <input asp-for="File" class="form-control" accept="image/jpeg">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit Changes</button>
        </form>
    </div>
</div>

