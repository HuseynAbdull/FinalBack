@using FinalProjectCode.ViewModels.RegisterVM;
@model LoginVM;

@{
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Modernize Free</title>
    <link rel="shortcut icon" type="image/png" href="~/manage/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/manage/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="../assets/images/logos/dark-logo.svg" width="180" alt="">
                                </a>
                                <p class="text-center">Your Social Campaigns</p>
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text text-danger"></div>
                                    <!-- Email input -->
                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label">Username</label>
                                        <input asp-for="Email" class="form-control">
                                    </div>
                                    <!-- Email input -->

                                    <!-- Password input -->
                                    <div class="mb-4">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <input asp-for="Password" class="form-control">
                                    </div>
                                    <!-- Password input -->

                                    <!-- BUTTON -->
                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Sign In</button>
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/manage/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/manage/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/manage/js/sidebarmenu.js"></script>
    <script src="~/manage/js/app.min.js"></script>
    <script src="~/manage/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/manage/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/manage/js/dashboard.js"></script>
    <script src="~/manage/js/customap.js" asp-append-version="true"></script>
</body>

</html>