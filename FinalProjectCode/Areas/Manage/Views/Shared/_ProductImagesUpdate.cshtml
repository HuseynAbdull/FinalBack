@model IEnumerable<ProductImage>


@if (Model.FirstOrDefault() != null)
{
    foreach (ProductImage productImage in Model)
    {
        <div class="update-img d-flex justify-content-between">
            <img style="width: 200px;" src="~/assets/photos/products/@productImage.Image" />
            @if (Model.Count() > 0)
            {
                <a style="cursor: pointer !important" class="deleteImg" data-prodid="@productImage.ProductId" data-imageId="@productImage.Id">X</a>
            }
        </div>
    }
}