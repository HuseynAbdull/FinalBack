
@using FinalProjectCode.Models;
@model ProductType


<div class="row">
    <div class="col-lg-4">
        <h1 class="h3 mb-4 text-gray-800">Gender Update Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form method="post">
            
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="@Model.Id">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">New Name</label>
                <input asp-for="Name" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit Changes</button>
        </form>
    </div>
</div>
